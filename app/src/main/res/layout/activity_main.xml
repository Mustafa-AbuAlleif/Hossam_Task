<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:srcCompat="@tools:sample/avatars"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="10sp"
        android:layout_marginTop="20dp"
        android:src="@drawable/images"
        android:contentDescription="TODO"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="40dp"
        android:fontFamily="@font/aclonica"
        android:text="Welcome Back"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/emile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:hint="@string/emile"
        android:fontFamily="@font/alatsi"
        android:minHeight="48dp"
        android:paddingLeft="30sp"
        android:paddingTop="10sp"
        android:paddingEnd="300sp"
        android:paddingBottom="10sp" />

    <EditText
        android:minHeight="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20sp"
        android:background="@drawable/border"
        android:hint="@string/password"
        android:fontFamily="@font/alatsi"
        android:inputType="textPassword"
        android:paddingStart="30sp"
        android:paddingTop="10sp"
        android:paddingEnd="270sp"
        android:paddingBottom="10sp"
        tools:ignore="TouchTargetSizeCheck"
        android:id="@+id/password"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#B61010"
        android:textColor="#020202"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:text="Login"
        android:fontFamily="@font/alatsi"
        android:id="@+id/login"
        android:textSize="20sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="_____________________________   or   _____________________________"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_gravity="center"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/facebook"
            android:layout_width="92dp"
            android:layout_height="96dp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/border"
            android:backgroundTint="#FFF"
            android:src="@mipmap/facebook_icon"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="@string/todo" />

        <ImageButton
            android:id="@+id/google"
            android:layout_width="92dp"
            android:layout_height="96dp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/border"
            android:backgroundTint="#FFF"
            android:src="@mipmap/google_icon_round"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="@string/todo"
            />
        <ImageButton
            android:id="@+id/apple"
            android:layout_width="92dp"
            android:layout_height="96dp"
            android:layout_marginStart="30sp"
            android:layout_marginTop="30sp"
            android:background="@drawable/border"
            android:backgroundTint="#FFF"
            android:src="@mipmap/apple_icon_foreground"
            tools:ignore="SpeakableTextPresentCheck"
            android:contentDescription="@string/todo"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alatsi"
            android:text="I don't have an account?"
            android:textSize="20dp"
            android:layout_marginLeft="40sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/alfa_slab_one"
            android:text="Sign Up"
            android:layout_margin="3sp"
            android:id="@+id/sign_up"/>

    </LinearLayout>




</LinearLayout>